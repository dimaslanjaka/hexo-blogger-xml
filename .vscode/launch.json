  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "command": "npx hexo server --development",
      "name": "[DEV] Demo Server",
      "cwd": "${workspaceFolder}/test/demo/",
      "env": {
        "NODE_ENV": "development"
      },
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "command": "cd ../../ && gulp blogger",
      "name": "Gulp Test",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "command": "npx tsc -p tsconfig.json",
      "name": "Compile tsconfig.json",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "command": "npx tsc -p tsconfig.publish.json",
      "name": "Compile tsconfig.publish.json",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "args": [
        "default"
      ],
      "name": "Gulp default",
      "program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/dist/test",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": [
        "${workspaceFolder}/build/dist/**/*.js"
      ]
    }
  ]
}